<% layout('../layout/layout') %> 
<!-- content -->
<section class="container my-sm-5 my-0 p-0">
    <div class="row justify-content-center gx-5 m-0">
        <!-- 資料填寫區塊 -->
        <div class="col-lg-6 col-md-7 col p-0 px-sm-3">
            <div class="row gx-3 bg-primary text-success justify-content-center align-items-center py-4">
                <div class="col-5"><p class="h1 mb-0">付款</p></div>
                <!-- 進度條 -->
                <div class="col-5">
                    <div class="row justify-content-center">
                      <div class="col d-flex justify-content-between align-items-center">
                        <div><i class="fas fa-check-circle"></i></div>
                        <div class="connect-line border-success bg-success"></div>
                        <div><i class="far fa-dot-circle"></i></div>
                        <div class="connect-line border-success bg-success"></div>
                        <div><i class="far fa-circle"></i></div>
                      </div>
                    </div>
                </div>
            </div>
            <!-- 桌機版表單 -->
            <form class="d-none d-sm-inline-flex row g-3 justify-content-center text-success bg-primary pb-5">
                <div class="col-10">
                    <label for="credit-number" class="fw-bold fs-5 form-label">信用卡卡號</label>
                    <div class="input-group py-3">
                        <input id="credit-number" class="input-style form-control rounded-0 py-3" type="number" placeholder="9012-3456-7890-1234">
                        <div class="input-group-text text-secondary rounded-0 input-style py-3"><i class="far fa-credit-card"></i></div>
                    </div>
                </div>
                <div class="col-10">
                    <label class="form-label fw-bold fs-5">持卡人姓名</label>
                    <div class="row g-3">
                        <div class="col-6">
                            <input id="last-name" class="input-style form-control rounded-0 py-3" type="text" placeholder="王">
                        </div>
                        <div class="col-6">                                
                            <input id="last-num" class="input-style form-control rounded-0 py-3" type="text" placeholder="小明">
                        </div>
                    </div>
                </div>
                <div class="col-10">
                    <label class="form-label fw-bold fs-5">有效期限</label>
                    <div class="row g-3">
                        <div class="col-6">
                            <select class="form-select rounded-0 input-style form-control py-3" aria-label="請選擇收件縣市">
                                <option selected>月</option>
                                <option value="1">01</option>
                                <option value="2">02</option>
                                <option value="3">03</option>
                            </select>
                        </div>
                        <div class="col-6">
                            <select class="form-select rounded-0 input-style form-control py-3" aria-label="請選擇收件區域">
                                <option selected>年</option>
                                <option value="1">26</option>
                                <option value="2">27</option>
                                <option value="3">28</option>
                            </select>
                        </div>
                        <div class="col-6">
                            <label for="cvc" class="fw-bold fs-5 form-label">背面末三碼</label>
                            <input id="cvc" class="input-style form-control rounded-0 py-3" type="number" placeholder="123">
                        </div>
                    </div>
                </div>
                
            </form>
            <!-- 手機版表單 -->
            <form class="d-sm-none d-inline-flex row g-3 justify-content-center text-success bg-primary pb-5">
                <div class="col-10">
                    <label for="credit-number" class="fw-bold fs-5 form-label">信用卡卡號</label>
                    <div class="input-group">
                        <input id="credit-number" class="input-style form-control rounded-0" type="number" placeholder="9012-3456-7890-1234">
                        <div class="input-group-text text-secondary rounded-0 input-style py-3"><i class="far fa-credit-card"></i></div>
                    </div>
                </div>
                <div class="col-10">
                    <label class="form-label fw-bold fs-5">持卡人姓名</label>
                    <div class="row g-3">
                        <div class="col-6">
                            <input id="last-name" class="input-style form-control rounded-0 py-3" type="text" placeholder="王">
                        </div>
                        <div class="col-6">                                
                            <input id="last-num" class="input-style form-control rounded-0 py-3" type="text" placeholder="小明">
                        </div>
                    </div>
                </div>
                <div class="col-10">
                    <label class="form-label fw-bold fs-5">有效期限</label>
                    <div class="row g-3">
                        <div class="col-6">
                            <select class="form-select rounded-0 input-style form-control py-3" aria-label="請選擇收件縣市">
                                <option selected>月</option>
                                <option value="1">01</option>
                                <option value="2">02</option>
                                <option value="3">03</option>
                            </select>
                        </div>
                        <div class="col-6">
                            <select class="form-select rounded-0 input-style form-control py-3" aria-label="請選擇收件區域">
                                <option selected>年</option>
                                <option value="1">26</option>
                                <option value="2">27</option>
                                <option value="3">28</option>
                            </select>
                        </div>
                        <div class="col-6">
                            <label for="cvc" class="fw-bold fs-5 form-label">背面末三碼</label>
                            <input id="cvc" class="input-style form-control rounded-0 py-3" type="number" placeholder="123">
                        </div>
                    </div>
                </div>
                
            </form>
            <!-- 下一步按鈕 -->
            <div class="row g-3">
                <a href="/checkout/e-receipt" class="btn btn-info rounded-0 text-primary fw-bold fs-4 py-3">下一步</a>
            </div>
        </div>
        <!-- 訂單資訊 -->
        <div class="col-lg-4 col-md-5 d-md-block d-none">
            <!-- 訂單摘要 -->
            <div class="row text-secondary p-0 mb-3">
                <h3 class="py-3 bg-success fw-bold h4 text-center mb-0">訂單摘要</h3>
                <div class="border border-1 border-success">
                    <div class="row mb-2 mt-3">
                        <div class="col-md-6"><span class="fw-light">小計</span></div>
                        <div class="col-md-6 text-end"><span class="fw-light">NT$ 2,700</span></div>
                    </div>
                    <div class="row">
                        <div class="col-md-6"><span class="fw-light">運費</span></div>
                        <div class="col-md-6 text-end"><span class="fw-light">NT$ 700</span></div>
                    </div>
                    <div class="row fs-5 my-3">
                        <div class="col-md-6"><span class="fw-bold">總計</span></div>
                        <div class="col-md-6 text-end"><span class="fw-bold">NT$ 3,400</span></div>
                    </div>
                </div>    
            </div>
            <!-- 購物清單 -->
            <div class="row text-secondary p-0">
                <h3 class="py-3 bg-success fw-bold h4 text-center mb-0">購物清單</h3>
                <ul class="border border-1 border-success">
                    <li class="my-3 row justify-content-md-evenly align-items-center justify-content-center">
                        <div class="bg-cover col-md-6 col-4" style="background-image: url(https://bit.ly/2QvsT63) ;height: 80px; width: 120px;"></div>
                        <div class="col-6">
                            <h2 class="fs-6">草莓奶酪杯(2)</h2>
                            <span class="fs-5 fw-bold">NT$ 900</span>
                        </div>
                    </li>
                    <li class="mb-3 row justify-content-md-evenly justify-content-center align-items-center ">
                        <div class="bg-cover col-md-6 col-4" style="background-image: url(https://bit.ly/2zBDAxX) ;height: 80px; width: 120px;"></div>
                        <div class="col-6">
                            <h2 class="fs-6">奶油草莓派(2)</h2>
                            <span class="fs-5 fw-bold">NT$ 900</span>
                        </div>
                    </li>
                    <li class="mb-3 row justify-content-md-evenly justify-content-center align-items-center ">
                        <div class="bg-cover col-md-6 col-4" style="background-image: url(https://bit.ly/2zKOP7w) ;height: 80px; width: 120px;"></div>
                        <div class="col-6">
                            <h2 class="fs-6">莓好繽紛塔(2)</h2>
                            <span class="fs-5 fw-bold">NT$ 900</span>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>